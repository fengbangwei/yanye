.add-container{
  padding: 0 10rpx 0 10rpx;
}
.topNav {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 80rpx;
  background-color: #0faeff;
  justify-content: space-between;
  color: #fff;
  align-items: center;
}
.topNav text{
  margin-right: 220rpx;
}
.icon-arrow-left {
  margin-left: 10rpx;
}
/* 表单 */
.uni-form-item{
	display:flex;
	width:100%;
  padding: 20rpx;
  border-bottom: 3rpx #ccc solid;
}
.uni-form-item .title{
  width: 250rpx;
}
.uni-form-item .address-phone,.uni-form-item .bank-number{
  display: flex;
  align-items: center;
  width: 358rpx;
}
.btn-group{
  padding: 20rpx;
}
input{
  overflow: hidden;
