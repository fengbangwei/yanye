/* 表单 */
.uni-form-item{
	display:flex;
	width:100%;
	padding:10rpx 0;
}
.uni-form-item .title{
	padding:10rpx 25rpx;
}
.uni-label {
	width: 210rpx;
	word-wrap: break-word;
	word-break: break-all;
	text-indent:20rpx;
}
.uni-input {
	height: 50rpx;
	padding: 15rpx 25rpx;
	line-height:50rpx;
	font-size:28rpx;
	background:#FFF;
	flex: 1;
}
radio-group, checkbox-group{
	width:100%;
}
radio-group label, checkbox-group label{
	padding-right:20rpx;
}
.uni-form-item .with-fun{
	display:flex; 
	flex-wrap:nowrap; 
	background:#FFFFFF;
}
.uni-form-item .with-fun .uni-icon{
	width:40px; 
	height:80rpx; 
	line-height:80rpx; 
	flex-shrink:0;
}

/* loadmore */
.uni-loadmore{
	height:80rpx;
	line-height:80rpx;
	text-align:center;
	padding-bottom:30rpx;
}